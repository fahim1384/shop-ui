@model HandiCrafts.Web.Models.Account.ShortLoginModel

<aside class="wrapper">
    <div class="col-sm-4 ">
        <div class="card">
            <div class="card-header">
                <div class="kt-login__head">
                    <div class="text-center pb-8">
                        <h4 class="kt-login__title">ورود به سیستم</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="kt-login__form">
                    <form id="form_login" class="kt-form" asp-action="Login" asp-controller="Account" data-ajax-method="POST"
                          data-ajax="true" data-ajax-begin="onSigninBegin" data-ajax-complete="onSigninComplete"
                          data-ajax-failure="onSigninFailed" data-ajax-success="onSigninSuccess">
                        <div class="form-group">
                            <label asp-for="MobileNo"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="kt-font-danger"></span>
                        </div>
