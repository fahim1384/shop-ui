                                <div class="form-group">
                                    <label asp-for="Username"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="kt-font-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control form-control-last" />
                                    <span asp-validation-for="Password" class="kt-font-danger"></span>
                                </div>
                            <div class="kt-login__extra">
                                <label class="kt-checkbox">
                                    <input asp-for="RememberMe" type="checkbox"> مرا بخاطر بسپار
                                    <span></span>
                                </label>
                                <a href="javascript:;" class="float-right" id="kt_login_forgot"><small>رمز خود را فراموش کرده اید؟</small></a>
                            </div>*@

                        <div class="kt-login__actions mt-3">
                            <button id="kt_login_signin_submit" type="submit" class="btn btn-block btn-info">ورود</button>
                        </div>

                        <div class="kt-login__actions mt-3">
                            در سرای ثبت نام نکرده اید؟ <a href="/Account/Register" class="color-firouzi">ثبت نام</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</aside>