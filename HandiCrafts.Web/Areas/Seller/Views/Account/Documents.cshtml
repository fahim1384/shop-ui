@model HandiCrafts.Web.Areas.Seller.Models.Account.PersonalInformationVModel
@{
    ViewData["Title"] = "تکمیل مدارک صنعتگر";
    Layout = "~/Areas/Seller/Views/Shared/_AccountLayout.cshtml";
}
@section Styles{ }

<div class="reg_login_content_mainform reg_login_content0000 mr-auto comp-info">

    <form id="form_login" class="kt-form" asp-area="Seller" asp-action="Documents" asp-controller="Account" data-ajax-method="POST"
          data-ajax="true" data-ajax-begin="onSigninBegin1" data-ajax-complete="onSigninComplete1"
          data-ajax-failure="onSigninFailed1" data-ajax-success="onSigninSuccess1">

        <input type="hidden" asp-for="UserId" value="1" />
        <div asp-validation-summary="All"></div>
        <div class="alert alert-danger d-none" id="errorbox"></div>

        <h5 class="active-text mb-4 mt-5">مالیات بر ارزش افزوده</h5>

        <div class="row">
            <div class="col-sm-12 form-group mb-4">
                <label>آیا مشمول مالیات بر ارزش افزوده می باشید؟</label>
                <div class="input-group mb-2 height-40px reg-element">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="maliatRadioOptions" value="1" checked>
                        <label class="form-check-label mr-5 ml-0" for="inlineRadio1">بلی</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="maliatRadioOptions" value="2">
                        <label class="form-check-label mr-5 ml-0" for="inlineRadio2">خیر</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 form-group mb-4">
                <button type="submit" name="submit" class="btn btn-info bg-cyan btn-md pb-2 pt-2 border-radius-10 min-width-200px">بارگذاری برگه مالیات بر ارزش افزوده</button>
            </div>
        </div>

        <h5 class="active-text mb-4 mt-5">بارگذاری مدارک</h5>

        <div class="row">
            <div class="col-sm-12 form-group mb-4">
                <button type="submit" name="submit" class="btn btn-info bg-cyan btn-md pb-2 pt-2 border-radius-10 min-width-200px">بارگذاری تصویر روی کارت ملی</button>
                <a class="btn btn-link pb-2 pt-2 pl-0 pr-0 cyan ml-3" style="border-bottom:1px dashed #0094ff">مشاهده نمونه</a>
            </div>

            <div class="col-sm-12 form-group mb-4">
                <button type="submit" name="submit" class="btn btn-info bg-cyan btn-md pb-2 pt-2 border-radius-10 min-width-200px">بارگذاری تصویر پشت کارت ملی</button>
                <a class="btn btn-link pb-2 pt-2 pl-0 pr-0 cyan ml-3" style="border-bottom:1px dashed #0094ff">مشاهده نمونه</a>
            </div>

            <div class="col-sm-12 form-group mb-4">
                <button type="submit" name="submit" class="btn btn-info bg-cyan btn-md pb-2 pt-2 border-radius-10 min-width-200px">بارگذاری تصویر کارت صنایع دستی</button>
                <a class="btn btn-link pb-2 pt-2 pl-0 pr-0 cyan ml-3" style="border-bottom:1px dashed #0094ff">مشاهده نمونه</a>
            </div>

        </div>

        <div class="form-group text-center mt-3">
            <button id="kt_login_signin_submit1" type="submit" name="submit" class="btn btn-info btn-lg mb-2 mt-4 pl-5 pr-5 border-radius-10">ثبت نهایی</button>
        </div>

    </form>
</div>

@section Scripts{

}
