                                                <span>اطلاعات شخصی صنعتگر، اطلاعات تجاری، اطلاعات تماس</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </aside>
                    <main class="col-md-7 seller-main-form scrollbar" id="style-1">
                        @RenderBody()
                    </main>
                </div>
            </section>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.rtl.min.js"></script>
    <script src="/plugins/select2/select2.min.js"></script>
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
    <script src="~/plugins/Notify/bootstrap-notify.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
